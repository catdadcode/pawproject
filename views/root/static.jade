extends ../layout

block content
  div(ng-controller="staticCtrl as ctrl", ng-init="ctrl.init('#{resourceName}')")
    h1.wow.zoomIn= title
    div.wow.bounceInUp(ng-switch="ctrl.edit")
      div.well(ng-switch-when="false")
        if (user && user.isAdmin())
          button.btn.btn-primary.center-block(ng-click="ctrl.edit = true") Edit Page
          hr
        div(ng-bind-html="ctrl.parsedContent")
      form.well(ng-switch-when="true", ng-cloak)
        div.form-group
          label(for="content") Content
          textarea.form-control(name="content", rows="10", ng-model="ctrl.content.value")
        button.btn.btn-success(ng-click="ctrl.save()") Save
        button.btn.btn-danger.cancel-btn(ng-click="ctrl.edit=false") Cancel
  script(src="/javascripts/staticContent.js")
  link(rel="stylesheet", href="/stylesheets/staticContent.css")
