extends ../layout

block content
  - errors = errors ? errors : {}
  link(rel="stylesheet", href="/stylesheets/login.css")
  div.row
    form.col-xs-10.col-xs-offset-1.col-md-4.col-md-offset-4.well(action="/auth/login", method="POST")
      div.alert.alert-info.
        Currently only administrators can log in. If you are a visitor, you are unable to log in at this time.
      if errors.failure
        div.alert.alert-danger.text-center= errors.failure.message
      div.form-group
        label(for="email") Email
        input.form-control(type="email", name="email", placeholder="Enter your login email.")
      div.form-group
        label(for="password") Password
        input.form-control(type="password", name="password", placeholder="Enter your password.")
      //div.checkbox
        label
          input(type="checkbox")
          span Remember me.
      div.text-center
        button#login.btn.btn-primary(type="submit") Login
        span or
        a#signUp.btn.btn-success(href="/auth/signup") Sign Up
